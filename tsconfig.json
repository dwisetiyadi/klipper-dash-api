{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin"
  ]
}
